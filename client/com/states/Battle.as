package com.states {		import flash.display.*;	import com.models.Map;	import com.factories.Maps;	import com.lib.State;	import com.controllers.*;	import com.views.BubbleView;		public class Battle extends State {		private var gameMap:Map;		private var humanController:PlayerBattleController;		private var aiController:AIBattleController = new AIBattleController();		private var bubble:BubbleView		public function Battle(s:Stage) 		{			super(s);			humanController = new PlayerBattleController(this);	    }				public function setMap(m:Map):void { gameMap = m; }		public function getPlayerController():PlayerBattleController { return humanController; }		public function getBubbleView()		{			if(bubble == null)			{				bubble = new BubbleView();				addView(bubble);				bubble.visable = false;			}			return bubble;		}	}	}