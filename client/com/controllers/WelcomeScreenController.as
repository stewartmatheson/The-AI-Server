package com.controllers {		import flash.events.MouseEvent;	import com.states.*;	import com.events.StateEvent;		public class WelcomeScreenController {				// Constants:		// Public Properties:		// Private Properties:		var currentState:WelcomeScreen;			// Initialization:		public function WelcomeScreenController(s:WelcomeScreen) { currentState = s; }			// Public Methods:		public function newBattle(e:MouseEvent):void		{			trace("new battle hit");			trace(e.currentTarget.getText());									var nextStateEvent:StateEvent = new StateEvent(StateEvent.COMPLETE);			var b:Battle = new Battle(currentState.getStage());			nextStateEvent.setNextState(b);			currentState.dispatchEvent(nextStateEvent);		}				// Protected Methods:					}	}