package com.controllers {		import flash.events.MouseEvent;	import com.states.Battle;	import com.models.Tile;	import com.views.BubbleView		public class PlayerBattleController {				private var currentState:Battle;				public function PlayerBattleController(b:Battle) { currentState = b; }				public function displayTileInfo(e:MouseEvent):void		{			var currentTile:Tile = e.currentTarget.getModel();			currentState.getBubbleView().body.text = ""			currentState.getBubbleView().title.text = currentTile.getType();			currentState.getBubbleView().titleRight.text = currentTile.getMapPoint().getXPos().toString() + 															", " + 															currentTile.getMapPoint().getYPos().toString();						currentState.getBubbleView().x = e.currentTarget.x + 											 e.currentTarget.parent.x - 											 (currentState.getBubbleView().width / 2) +											 (e.currentTarget.width / 2);						currentState.getBubbleView().y = e.currentTarget.y + 											 e.currentTarget.parent.y - 											 currentState.getBubbleView().height;						currentState.getBubbleView().visible = true;		}				public function hideTileInfo(e:MouseEvent):void		{			currentState.getBubbleView().visible = false;		}		}	}