package com.controllers {		import flash.events.*;	import com.states.Battle;	import com.models.Tile;	import com.views.BubbleView;			public class PlayerBattleController {		private var currentState:Battle;				public function PlayerBattleController(b:Battle) { currentState = b; }		public function keyPressed(e:KeyboardEvent):void 		{			switch(e.keyCode)			{				case 57 :					keyTopRight();				break;								case 56 :					keyTop();				break;								case 52 :					keyLeft();				break;								case 55 :					keyTopLeft();				break;								case 52 :					keyLeft();				break;								case 49 :					keyDownLeft();				break;								case 50 :					keyDown();				break;								case 51 :					keyDownRight();				break;								case 54 :					keyRight();				break;			}		}				public function keyTopRight():void		{			trace("keytopright");		}				public function keyTop():void		{			trace("keytop");		}				public function keyTopLeft():void		{			trace("keytopleft");		}		public function keyLeft():void		{			trace("keyleft");		}				public function keyDownLeft():void		{			trace("keydownleft");		}				public function keyDown():void		{			trace("keydown");		}				public function keyDownRight():void		{			trace("keydownright");		}				public function keyRight():void		{			trace("keyright");		}	}	}