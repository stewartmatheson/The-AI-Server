package com.views {		import flash.display.MovieClip;	import com.views.*;	import com.models.*;		public class BattleHud extends MovieClip {				private var tileInfo:TileInfoBubble;		private var unitInfo:UnitInfoBubble;				public function BattleHud() { }		public function setTileInfoBubble(t:TileInfoBubble)		{ 			tileInfo = t;			tileInfo.visible = false; 			addChild(tileInfo);		}				public function setUnitInfoBubble(t:UnitInfoBubble) 		{			unitInfo = t; 			unitInfo.visible = false;			addChild(unitInfo); 		}				public function displayUnitStatus(u:Unit):void {}				public function displayTileStatus(t:Tile):void		{			tileInfo.title.text = t.getType();			tileInfo.body.text = "";			tileInfo.titleRight.text = t.getMapPoint().getXPos().toString() + ", " + t.getMapPoint().getYPos().toString();			tileInfo.visible = true;		}				public function hideTileStatus():void {  tileInfo.visible = false; }	}	}