package com.lib {	import flash.display.*;	import flash.events.*;		public class State extends EventDispatcher {		protected var currentStage:Stage;		protected var stateViews:Array;				public function State(s:Stage)		{ 			currentStage = s;			stateViews = new Array();		}				public function display():void		{			for(var i:int; i < stateViews.length; i++ )				currentStage.addChild(stateViews[i]);		}				public function hide():void		{			for(var i:int; i < stateViews.length; i++ )				currentStage.removeChild(stateViews[i]);		}				public function getStage():Stage { return currentStage; }		public function addView(m:MovieClip):void { stateViews.push(m); }	}}