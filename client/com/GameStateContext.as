package com {    import flash.display.Stage;	import com.states.*;	import com.events.StateEvent;	import com.lib.State;		public class GameStateContext	{				// Constants:		// Public Properties:		// Private Properties:		private var currentStage:Stage;		private var currentState:State;			// Initialization:		public function GameStateContext(s:Stage)		{			currentStage = s;			currentState = new Loader(currentStage);			currentState.display();			currentState.addEventListener(StateEvent.COMPLETE, nextStateReady);			}		private function nextStateReady(e:StateEvent):void		{			currentState.hide();			currentState = null;			currentState = e.getNextState();			currentState.display();			currentState.addEventListener(StateEvent.COMPLETE, nextStateReady);		}	}	}