<h1>Listing moves</h1>

<table>
  <tr>
    <th>Match</th>
    <th>Unit type</th>
    <th>Start point</th>
    <th>End point</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @moves.each do |move| %>
  <tr>
    <td><%= move.match_id %></td>
    <td><%= move.unit_type %></td>
    <td><%= move.start_point_id %></td>
    <td><%= move.end_point_id %></td>
    <td><%= link_to 'Show', move %></td>
    <td><%= link_to 'Edit', edit_move_path(move) %></td>
    <td><%= link_to 'Destroy', move, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

